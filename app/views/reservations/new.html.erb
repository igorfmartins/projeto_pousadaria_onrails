<h2>Detalhes do Quarto</h2>
<p>Nome do Quarto: <%= @room.name %></p>
<p>Descrição: <%= @room.description %></p>


<h2>Reservar Quarto</h2>
<%= form_with(model: [@room, @reservation], url: inn_room_reservations_path(@room.inn, @room), local: true) do |form| %>

  <%= form.hidden_field :room_id, value: @room.id %>
  <%= form.hidden_field :visitor_id, value: current_visitor.id %>
  
  <%= form.label :start_date %>
  <%= form.date_field :start_date, required: true %>

  <%= form.label :end_date %>
  <%= form.date_field :end_date, required: true %>

  <%= form.label :number_of_guests %>
  <%= form.number_field :number_of_guests, required: true %>

  <%= form.submit 'Verificar Disponibilidade' %>
<% end %>
